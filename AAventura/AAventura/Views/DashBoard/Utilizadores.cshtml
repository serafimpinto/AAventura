@model IEnumerable<AAventura.Models.Utilizador>
@{
    ViewBag.Title = "Utilizadores";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1><small>DashAdmin board </small></h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-user"></i> Utilizadores</li>
            </ol>
        </div>
    </div>
    <h2>Gerir Utilizadores </h2>
    <div class="col-centered col-lg-6">
        <h3>Lista de Utilizadores</h3>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped tablesorter">
                <thead>
                    <tr>
                        <th>Username <a><i class="fa fa-sort"></i></a></th>
                        <th>ID <a><i class="fa fa-sort"></i></a></th>
                        <th>Nome <a><i class="fa fa-sort"></i></a></th>
                        <th>Email <a><i class="fa fa-sort"></i></a></th>
                        <th>Estado <a><i class="fa fa-sort"></i></a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Lista)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.UserId</td>
                            <td>@item.Nome</td>
                            <td>@item.Email</td>
                            @if (@item.Estado == 2) {
                            <td>Banido</td>
                            }
                            @if (@item.Estado == 1)
                            {
                            <td>Activo</td>
                            }
                            @if (@item.Estado == 0)
                            {
                            <td>Administrador</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="bs-example">
            <ul class="pager">
                @if (ViewBag.Pag > 0)
                {
                    <li><a href="@Url.Action("Utilizadores", "DashBoard", new { pag = ViewBag.Pag - 1 })">Anterior</a></li>
                }
                @if ((ViewBag.Size % ViewBag.Elem) == 0) {
                if (ViewBag.Pag < ViewBag.Elem-1) {
                <li><a href="@Url.Action("Utilizadores", "DashBoard", new { pag = ViewBag.Pag + 1 })">Próximo</a></li>
                }
                }
                @if ((ViewBag.Size % ViewBag.Elem) != 0) { 
                if (ViewBag.Pag < ViewBag.Elem)
                {
                    <li><a href="@Url.Action("Utilizadores", "DashBoard", new { pag = ViewBag.Pag + 1 })">Próximo</a></li>
                }
                }
            </ul>
        </div>
    </div>

    <div class="col-lg-4 col-centered">
        <div class="form-group">
            <label>Insira o "ID" do utilizador pretendido</label>
            <input id="iduser" class="form-control" placeholder="Escreva aqui...">
        </div>
        <script>
            function onClick() {
                if (document.getElementById("iduser").value == "") {
                    alert("Preencha o campo ID");
                }
                else {
                    var url = "/DashBoard/Banir/" + document.getElementById("iduser").value;
                    window.location.href = url;
                }
            }
            function onClick2() {
                if (document.getElementById("iduser").value == "") {
                    alert("Preencha o campo ID");
                }
                else {
                    var url = "/DashBoard/Activar/" + document.getElementById("iduser").value;
                    window.location.href = url;
                }
            }
        </script>
        <button type="submit" class="btn btn-success" value="Activar" onclick="onClick2()">Activar</button>
        <button type="submit" class="btn btn-warning" value="Banir" onclick="onClick()">Banir</button>
    </div>
    </div><!-- /.row -->


