@{
    ViewBag.Title = "Perguntas";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}
<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1><small>DashBoard Admin </small></h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-edit"></i> Perguntas</li>
