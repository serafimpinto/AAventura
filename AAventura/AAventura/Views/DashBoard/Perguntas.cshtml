    <h2>Adicionar Pergunta</h2>
    <div class="col-md-8 col-centered">
        <div class="panel panel-primary animated fadeInDown">

            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="InputDescricao">Descrição da Pergunta<sup>*</sup></label>
                        <input type="text" class="form-control" id="InputDescricao">
                    </div>

                    <div class="form-group">
                        <label for="InputResposta">Resposta<sup>*</sup></label>
                        <input type="text" class="form-control" id="InputResposta">
                    </div>

                    <div class="form-group">
                        <label for="InputDificuldade">Dificuldade<sup>*</sup></label>
                        <input type="text" class="form-control" id="InputDificuldade">
                    </div>

                    <div class="form-group">
                        <label for="InputAjuda">Ajuda<sup>*</sup></label>
                        <input type="text" class="form-control" id="InputAjuda">
                    </div>

                    <div class="form-group">
                        <label for="InputTempo">Tempo<sup>*</sup></label>
                        <input type="text" class="form-control" id="InputTempo">
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="InputTipo">Tipo<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputTipo">
                            </div>
                        </div>
                        <div class="col-md-6 pull-right">
                            <div class="form-group">
                                <label>Escolha o ficheiro</label>
                                <input type="file">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="InputHipA">Hipótese A<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputHipA">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="InputHipB">Hipótese B<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputHipB">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="InputHipC">Hipótese C<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputHipC">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="InputHipD">Hipótese D<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputHipD">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Zona</label>
                        <select class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="row">

                        <div class="col-md-12 pull_right">
                            <button type="submit" class="btn btn-primary pull-right">Adicionar</button>
                        </div>
                    </div>
                </form>

            </div>
