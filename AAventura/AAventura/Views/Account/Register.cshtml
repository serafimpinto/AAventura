@model AAventura.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<header class="wrap-title">
    <div class="container">
        <h1 class="page-title">Registar</h1>

        <ol class="breadcrumb hidden-xs">
            <li><a href="#">Home</a></li>

            <li class="active">Registar</li>
        </ol>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <h2 class="section-title">Cria conta</h2>
            <div class="panel panel-primary animated fadeInDown">
                <div class="panel-heading">Registar</div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="InputUserName">User Name<sup>*</sup></label>
                            <input type="text" class="form-control" id="InputUserName">
                        </div>
                        <div class="form-group">
                            <label for="InputEmail">Email<sup>*</sup></label>
                            <input type="email" class="form-control" id="InputEmail">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="InputPassword">Password<sup>*</sup></label>
                                    <input type="password" class="form-control" id="InputPassword">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="InputConfirmPassword">Confirm Password<sup>*</sup></label>
                                    <input type="password" class="form-control" id="InputConfirmPassword">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="option1"> Li os <a href="#">Termos e Condições</a>.
                                </label>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary pull-right" value="Register">Registar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-lg-offset-1 col-md-5">
            <h2 class="section-title">Estás registado?</h2>
            <div class="panel panel-success animated fadeInDown animation-delay-2">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <div class="input-group login-input">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input type="text" class="form-control" placeholder="Username">
                            </div>
                            <br>
                            <div class="input-group login-input">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Login</button>
                            <br>

                            <hr>
                            <a href="#" class="btn btn-success pull-right">Criar Conta</a>
                            <a href="#" class="btn btn-warning">Recuperar Password</a>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> <!-- container  -->