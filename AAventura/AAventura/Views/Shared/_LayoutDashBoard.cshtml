<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - DashBoard Admin</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/css2/bootstrap.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <link href="~/Content/css2/sb-admin.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/font-awesome/css2/font-awesome.min.css">
    <!-- Page Specific CSS -->
    <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.4.3.min.css">
</head>

<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <ul class="nav navbar-nav navbar-right navbar-user">
                <li class="dropdown user-dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.Name <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Perfil","Account", new { id = ViewBag.UserId  })"><i class="fa fa-user"></i> Perfil</a></li>
                        <li class="divider"></li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <li><i class="fa fa-power-off"></i><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                        }
                    </ul>
                </li>
            </ul>

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/DashBoard">DashBoard Admin</a>


            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li><a href="/DashBoard/Utilizadores"><i class="fa fa-user"></i> Utilizadores</a></li>
                    <li><a href="/DashBoard/Perguntas"><i class="fa fa-edit"></i> Perguntas</a></li>
                    <li><a href="/DashBoard/Itens"><i class="fa fa-rocket"></i> Itens</a></li>
                    <li><a href="/DashBoard/Reports"><i class="fa fa-desktop"></i> Site Reports</a></li>
                    </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
        <!-- JavaScript -->
        <script src="~/Scripts/js2/jquery-1.10.2.js"></script>
        <script src="~/Scripts/js2/bootstrap.js"></script>

        <!-- Page Specific Plugins -->
        <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="http://cdn.oesmith.co.uk/morris-0.4.3.min.js"></script>
        <script src="~/Scripts/js2/morris/chart-data-morris.js"></script>
        <script src="~/Scripts/js2/tablesorter/jquery.tablesorter.js"></script>
        <script src="~/Scripts/js2/tablesorter/tables.js"></script>

</body>
</html>

