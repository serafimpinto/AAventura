@model IEnumerable<AAventura.Models.Utilizador>
@{
    ViewBag.Title = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Utilizadores econtrados</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped tablesorter">
                    <thead>
                        <tr>
                            <th>Utilizador</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>HighScore</th>
                            <th>Voltas ao Mundo</th>
                            <th>Respostas Certas</th>
                            <th>Respostas Erradas</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><a href="/Account/Perfil/@item.UserId">@item.UserName</a></td>
                                <td>@item.Nome</td>
                                <td>@item.Email</td>
                                <td>@item.HighScore</td>
                                <td>@item.VoltasDadas</td>
                                <td>@item.NrRespostasCertas</td>
                                <td>@item.NrRespostasErradas</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
